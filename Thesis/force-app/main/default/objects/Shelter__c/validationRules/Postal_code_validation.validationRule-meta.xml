<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Postal_code_validation</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(ShelterPostalCode__c, &quot;(?i)^[a-z0-9][a-z0-9\\- ]{0,10}[a-z0-9]$&quot;))</errorConditionFormula>
    <errorDisplayField>ShelterPostalCode__c</errorDisplayField>
    <errorMessage>Wrong postal code</errorMessage>
</ValidationRule>
